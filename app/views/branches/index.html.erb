<h1>Sucursales</h1>

<div class="row">
  <div class="col-lg-3">
    <%= link_to 'Crear sucursal', new_branch_path, class: "btn btn-primary btn-block" %>    
  </div>
</div>

<table class="table table-stripped table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th>Dirección</th>
      <th>Ciudad</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @branches.each do |branch| %>
      <tr>
        <td><%= branch.name %></td>
        <td><%= branch.description %></td>
        <td><%= branch.address %></td>
        <td><%= branch.city %></td>
        <td><%= link_to 'Editar', edit_branch_path(branch) %></td>
        <!--<td><%= link_to 'Eliminar', branch, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>


