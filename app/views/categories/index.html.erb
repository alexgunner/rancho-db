<h1>Categorías</h1>



<div class="row">
  <div class="col-lg-3">
    <%= link_to 'Crear categoría', new_category_path, class: "btn btn-primary btn-block" %>
  </div>
</div>

<table class="table table-stripped table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= link_to 'Editar', edit_category_path(category) %></td>
        <!--<td><%= link_to 'Borrar', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>


